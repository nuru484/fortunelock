# -------------------------------
# DATABASE CONFIGURATION
# -------------------------------
DATABASE_URL="postgresql://your_username:your_password@localhost:5432/your_database_name?schema=your_schema"
# Example:
# DATABASE_URL="postgresql://nurudeen:0553997465@localhost:5432/fortunelock?schema=public"

# -------------------------------
# SESSION & APP CONFIGURATION
# -------------------------------
SESSION_SECRET="your_super_secret_session_key"
# Secret used for signing session cookies

CORS_ACCESS="http://your_frontend_url:port"
# Example:
# CORS_ACCESS="http://localhost:3000"

NODE_ENV="your_environment"
# Options: "development", "production", etc.

PORT=your_port_number
# Example:
# PORT=8080

# -------------------------------
# FROG SMS API CONFIGURATION
# -------------------------------
FROG_API_KEY="your_frog_api_key"
FROG_SENDER_ID="your_frog_sender_id"
FROG_USERNAME="your_frog_username"
# Example:
# FROG_API_KEY="$2a$10$x43mI8vd9qsnuha07KtpL.Dr5uupG8XiU8IbzcWzRpw9tArtJMVFi"
# FROG_SENDER_ID="afatech"
# FROG_USERNAME="nuru"

# -------------------------------
# CLOUDINARY CONFIGURATION
# -------------------------------
CLOUDINARY_CLOUD_NAME="your_cloud_name"
CLOUDINARY_API_KEY="your_api_key"
CLOUDINARY_API_SECRET="your_api_secret"
# Example:
# CLOUDINARY_CLOUD_NAME="dam0swaaq"
# CLOUDINARY_API_KEY="185554684825193"
# CLOUDINARY_API_SECRET="2VKNbaREyJ0y2ggJUIxT8v0suJg"

# -------------------------------
# EMAIL SERVER CONFIGURATION
# -------------------------------
EMAIL_HOST="your_email_smtp_host"
EMAIL_PORT=your_email_port
EMAIL_SECURE=true_or_false
EMAIL_USER="your_email_username"
EMAIL_PASS="your_email_password"
# Example:
# EMAIL_HOST="smtp.gmail.com"
# EMAIL_PORT=587
# EMAIL_SECURE=false
# EMAIL_USER="youremail@gmail.com"
# EMAIL_PASS="your_email_app_password"
